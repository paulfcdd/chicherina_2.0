<div id="addTour" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Добавить новый концерт в афишу</h4>
            </div>
            <div class="info-message alert" hidden></div>
            <form>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="tourDate">Дата концерта</label>
                        <div class='input-group date' id='datetimepicker1'>
                             <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                             </span>
                            <input type='text' class="form-control" name="tour-date" id="tourDate"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="tourCity">Город</label>
                        <input type="text" name="tour-city" id="tourCity" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="tourPlace">Место</label>
                        <input type="text" name="tour-place" id="tourPlace" class="form-control">
                    </div>
                    <input type="text" id="path" value="{{ path('add_tour') }}" hidden>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">
                        <span class="fa fa-close"></span>&nbsp;Отменить
                    </button>
                    <button type="button" class="btn btn-success"
                            onclick="addTour(this.form)">
                        <span class="fa fa-plus"></span>&nbsp;Добавить
                    </button>
                </div>
            </form>
        </div>

    </div>
</div>