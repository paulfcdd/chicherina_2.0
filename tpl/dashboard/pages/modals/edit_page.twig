<div id="page-{{ id }}" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Редактировать страницу {{ page.pageName }}</h4>
            </div>
            <div class="info-message alert" hidden></div>
            <form>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="menuName">Имя в меню</label>
                        <input type="text" value="{{ page.pageName }}" name="menu_name" id="menuName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="pageTitle">Title</label>
                        <input type="text" value="{{ page.title }}" name="page_title" id="pageTitle" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="pageKeywords">Keywords</label>
                        <input type="text" value="{{ page.keywords }}"
                               placeholder="Ключевые слова разделяйте запятыми"
                               name="page_keywords" id="pageKeywords" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="pageDescription">Description</label>
                        <textarea class="form-control" rows="5" id="pageDescription">
                            {{ page.description }}
                        </textarea>
                    </div>
                    <div class="checkbox">
                        <label>
                            {% if page.isHidden == 1 %}
                                <input type="checkbox" value="1" checked>
                            {% else %}
                                <input type="checkbox" value="1">
                            {% endif %}
                            Скрыть страницу из меню
                        </label>
                    </div>
                    <input type="text" id="path" value="{{ path('add_album') }}" hidden>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">
                        <span class="fa fa-close"></span>&nbsp;Отменить
                    </button>
                    <button type="button" class="btn btn-success"
                            onclick="addAlbum(this.form)">
                        <span class="fa fa-plus"></span>&nbsp;Добавить
                    </button>
                </div>
            </form>
        </div>

    </div>
</div>