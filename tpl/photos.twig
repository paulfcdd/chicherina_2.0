{% extends 'base.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block content %}
	<div class="photos">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<ul class="list-group">
						{% for album in albums %}
							<a href="{{ path('single_album', {'id': album.id}) }}" class="list-group-item">
								{{ album.name }}<span class="badge">{{ album.countPhotos }}</span></a>
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>
	</div>
{% endblock %}